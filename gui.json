{ 
  "fonts": {
    "mono": {
      "file": "VeraMono.ttf",
      "size": 16
    },
    "regular":{
      "file":"Vera.ttf",
      "size":14,
    },
    "italics":{
      "file":"VeraIt.ttf",
      "size":14,
    }
  },
  
  "style":[
    ["default", {
      "font":"regular",
      "fontcolor":"white"
    }],
    [{"type":"textlabel"}, {"padding-right":6,"padding-bottom":4}],
    
    ["chatarea",{
      "height":"100%",
    }],
    ["chat",{
      "height":"95%",
      "font":"mono"
    }],
    ["chatinput",{
      "font":"mono",
      "height":24,
      "minimum-width":50,
      "position":"bottom-margin"
    }],
    ["loginform", {
      "width": 100,
      "height":50,
      "position":"center"
    }],
    
    ["sidepane",{
      "width":150,
      "position":"right-margin"
    }]
  ],

  "root": {
    "type": "container",
    "widgets": [
      {
        "name": "loginform",
        "type": "window",
        "title":"Login",
        "child":{
          "type":"vbox",
          "widgets": [
            {
              "type":"hbox",
              "widgets":[
                {
                  "type":"textlabel",
                  "text":"Username"
                },{
                  "type":"inputfield",
                  "name":"user",
                  "text":"foo"
                }
              ]
            },{
              "type":"hbox",
              "widgets":[
                {"type":"textlabel","text":"Password"},
                {"name":"pass","type":"inputfield","text":"foo"}
              ]
            },{
              "type":"button",
              "name":"submit-login",
              "text":"Log In."
            },
          ]
        }
      },{
        "name":"chatarea",
        "type":"vbox",
        "widgets":[
          {
            "name":"chat",
            "type":"chatlog"
          },{
            "name":"chatinput",
            "type":"inputfield",
          }
        ]
      },{
        "name":"sidepane",
        "type":"vbox",
        "widgets":[
          {"type":"textlabel","text":"Users"},
          {"type":"vbox","name":"userlist"},
        ]
      }
    ]
  }
}